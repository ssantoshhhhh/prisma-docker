generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  role  Role  @default(USER)
  name      String
  email     String   @unique
  password  String
  refreshToken String?
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

